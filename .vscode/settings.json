{
  "editor.formatOnSave": true, // 저장 시 포맷팅 적용
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit" // ESLint의 자동 수정을 사용하도록 설정
  },
  "[typescript]": {
    "editor.formatOnSave": true // TypeScript 파일을 저장할 때 자동으로 포맷팅
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true // TypeScript React 파일을 저장할 때 자동으로 포맷팅
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode" // 파일을 포맷할 때 사용할 기본 포맷터를 설정합니다. 여기서는 Prettier(확장 ID: esbenp.prettier-vscode)가 기본 포맷터로 설정되어 있어, 코드 포맷팅 시 Prettier가 사용
}
